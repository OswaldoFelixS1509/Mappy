<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mappy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/play_store_512"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".ActivityForgotPassword"
            android:exported="false" />
        <activity
            android:name=".Activity_ForgotPass"
            android:exported="false" />
        <activity
            android:name=".ActivityMainMenu"
            android:exported="false"
            android:screenOrientation="locked"
            android:windowActivityTransitions="true" />
        <activity
            android:name=".ActivityRegister"
            android:exported="false"
            android:screenOrientation="locked"
            android:windowActivityTransitions="true" />
        <activity
            android:name=".Activitylogin"
            android:exported="false"
            android:screenOrientation="locked"
            android:windowActivityTransitions="true" />
        <activity
            android:name=".ActivitySplashScreen"
            android:exported="true"
            android:screenOrientation="locked"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowActivityTransitions="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="locked"
            android:windowActivityTransitions="true" />
    </application>

</manifest>